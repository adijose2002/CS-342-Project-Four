    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="177.0" prefWidth="400.0" text="Client" textAlignment="CENTER" textOverrun="CLIP" translateY="-30.0" underline="true" BorderPane.alignment="CENTER">
            <font>
                <Font name="Times New Roman Bold" size="34.0" />
            </font>
        </Label>
    </top>
    <bottom>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#sendText" prefHeight="38.0" prefWidth="75.0" stylesheets="@../styles/style1.css" text="Send" translateY="-20.0" BorderPane.alignment="CENTER">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font></Button>
    </bottom>
    <center>
        <VBox fx:id="v" prefHeight="380.0" prefWidth="600.0" translateY="-70.0" BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="listItems2" blendMode="MULTIPLY" prefHeight="211.0" prefWidth="600.0" />
